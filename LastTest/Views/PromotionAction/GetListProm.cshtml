@model IEnumerable<LastTest.Promotion>

    @{
        ViewBag.Title = "GetListProm";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <style>
        #img {
            height: 100%;
            width: 100%;
        }
    </style>
    <p style="font-size: 18px; padding-bottom: 15px; padding-left: 20px">
        @Html.ActionLink("Tạo mới khuyến mãi", "AddProm")
    </p>
<div class="card">
    <div class="card-header" data-background-color="purple">
        <h4 class="category" style="text-align: center">Danh sách khuyến mãi</h4>
    </div>
    <div class="card-content table-responsive table-full-width">
        <table class="table">
            <thead class="text-primary">
            <th>
                @*@Html.DisplayNameFor(model => model.Title)*@Tiêu đề
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Description)*@Mô tả
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Last)*@Ngày hết hạn
            </th>
            <th></th>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Last)
                    </td>
                    <td>
                        <button class="btn btn-primary btn-round btn-fab btn-fab-mini" data-toggle="modal" data-target="#myModal" onclick="showModal('@item.Image')">
    <i class=" material-icons">
        visibility
    </i>
                    </button>

                    </td>
                    <td style="width: 100px">
                        <a href="@Url.Action("EditProm", "PromotionAction", new {id = item.ID})">
                            <button class="btn btn-primary btn-round btn-fab btn-fab-mini">
                                <i class="material-icons">mode_edit</i>
                                <div class="ripple-container"></div>
                            </button>
                        </a>
                        <a href="@Url.Action("DeleteProm", "PromotionAction", new {id = item.ID})">
                            <button class="btn btn-primary btn-round btn-fab btn-fab-mini">
                                <i class="material-icons">delete_forever</i>
                                <div class="ripple-container"></div>
                            </button>
                        </a>
                    </td>
                </tr>
                <!-- Sart Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="material-icons">clear</i>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="img" style="margin-top: 0">
                        <img id="imageURL" />
                    </div>
                </div>
            </div>
        </div>
    </div>
                      <!--  End Modal -->
            }
        </table>
    </div>
</div>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDvYH83b5lSxsMNGWFT2DJQyNH90cFbFV8"
            async defer>
    
    </script>
                      <script>
    function showModal(imgSrc) {
        $("#imageURL").attr("src", imgSrc);
    }
                      </script>



