@model LastTest.Store

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditStore</title>
    <script src="~/Scripts/bootstrap-notify.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/chartist.min.js"></script>
    <script src="~/Scripts/demo.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/material-dashboard.js"></script>
    <script src="~/Scripts/material.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/demo.css" rel="stylesheet" />
    <link href="~/Content/material-dashboard.css" rel="stylesheet" />

</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        <div class="form-horizontal">
            <div class="col-md-4"></div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h4 class="title" style="text-align: center">Thêm mới Store</h4>
                    </div>
                    <div class="col-md-12" style="padding-left: 30px">
                        <div class="form-group label-floating">
                            <label class="control-label">Tên quán</label>
                            @Html.EditorFor(model => model.NameStore, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Địa chỉ</label>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Avatar</label>
                            @Html.EditorFor(model => model.Avatar, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Cover</label>
                            @Html.EditorFor(model => model.Cover, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Rep</label>
                            @Html.EditorFor(model => model.Rep, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Latitude</label>
                            @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Longtitude</label>
                            @Html.EditorFor(model => model.Longtitude, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Mobile</label>
                            @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Save" class="btn btn-success"/>
                            </div>
                            <a href="@Url.Action("StoreDetails", "StoreAction")"><button class="btn btn-info" style="padding-left: 50px; padding-right: 50px">Back</button></a>
                        </div>
                        
                    </div>

                </div>
            </div>
            
    
            
    
            
        </div>
    }
    
    
</body>
</html>
